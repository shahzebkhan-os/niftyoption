# --- Database Configuration ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=intraday_options
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# --- Groww API Configuration ---
# Your Groww JWT Token (from browser cookies)
GROWW_JWT_TOKEN=your_jwt_here
# Groww Secret (used for request signing)
GROWW_SECRET=your_secret_here

# --- Telegram Configuration (Optional) ---
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# --- App Settings ---
ENV=dev
LOG_LEVEL=INFO
SYMBOL=NIFTY
INTERVAL_SECONDS=60
SIGNAL_THRESHOLD=0.6
DRY_RUN=true
